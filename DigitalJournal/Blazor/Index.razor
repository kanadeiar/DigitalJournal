@page "/online"
@inject IToastService toastService

<PageTitle>Главная - Журнал</PageTitle>

<div class="row">
    <div class="col-md-4 col-lg-3 mb-1">
        <_LeftSidebarPartial />
    </div>
    <div class="col-md-8 col-lg-9 mb-1">
        <div class="border-1 bg-light shadow rounded-1 p-2">
            <h1 class="my-2 p-2"><span class="fa fa-home" aria-hidden="true"></span> Онлайн обзор</h1>

            <p>Обзор информации из журналов.</p>

            <Tooltip Text="Кнопка проверки">
                <button class="btn btn-info" @onclick="@(() => toastService.ShowSuccess("Все замечательно!", "Великолепно"))">Сообщение пользователю</button>
            </Tooltip>
        </div>
    </div>
</div>



